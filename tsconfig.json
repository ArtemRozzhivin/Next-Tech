{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./*"
      ],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["./utils/*"],
      "@public/*": ["./public/*"],
      "@i18n/*": ["src/app/i18n/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "next-i18next.config.js", "src/app/[lng]/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
